---
import Layout from '~/layouts/BaseLayout.astro';
import { getHomePermalink } from '~/utils/permalinks';
import Header from '~/components/widgets/Header.astro';
import Footer from '~/components/widgets/Footer.astro';

const title = `Error 404`;
---

<Layout meta={{ title }}>
  <Header></Header>
  <section class="flex items-center h-full p-16">
    <div class="container flex flex-col items-center justify-center px-5 mx-auto my-8">
      <div class="max-w-md text-center">
        <h2 class="mb-8 font-bold text-9xl">
          <span class="sr-only">Error</span>
          <span class="bg-clip-text text-primary-600">404</span>
        </h2>
        <h3 class="mb-8 font-bold text-6xl">
          not found
        </h3>
        <p class="text-3xl font-semibold md:text-3xl mt-4 mb-8">お探しのページは存在しません.</p>
        <a rel="noopener noreferrer" href={getHomePermalink()} class="btn ml-4">戻る</a>
      </div>
    </div>
  </section>
  <Footer></Footer>
</Layout>
